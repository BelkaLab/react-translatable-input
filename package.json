{
  "name": "react-translatable-input",
  "version": "0.1.0",
  "description": "An input component that manages multiple languages",
  "main": "lib/index.js",
  "scripts": {
    "clean": "rm -rf lib",
    "build": "npm run build-styles && babel src --out-dir lib",
    "build-styles": "mkdir -p lib/styles/; stylus --inline src/styles --out lib/styles",
    "lint": "eslint src",
    "prepublish": "NODE_ENV=production; npm run lint && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/BelkaLab/react-translatable-input.git"
  },
  "keywords": [
    "react",
    "input",
    "translatable",
    "form",
    "multilanguage",
    "internazionalization",
    "i18n"
  ],
  "author": "Belka <giovanni@belka.us> (http://belka.us)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/BelkaLab/react-translatable-input/issues"
  },
  "homepage": "https://github.com/BelkaLab/react-translatable-input#readme",
  "dependencies": {
    "flag-icon-css": "^2.4.0",
    "react": "^15.3.2",
    "react-select": "^0.9.1"
  },
  "devDependencies": {
    "babel-eslint": "^7.0.0",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-react": "^6.16.0",
    "eslint": "^3.8.1",
    "eslint-config-airbnb": "^12.0.0",
    "eslint-plugin-import": "^1.16.0",
    "eslint-plugin-jsx-a11y": "^2.2.2",
    "eslint-plugin-react": "^6.3.0"
  }
}
